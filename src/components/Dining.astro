          <div class="flex-1 lg:px-20">
            <img
              src="/media/dining8.jpg"
              alt=""
              class="flex-1 w-full aspect-square object-cover rounded-full"
            />
          </div>
          <div class="flex-1 flex flex-col justify-center">
            <h2 class="font-bold text-4xl">Live Music Nights</h2>
            <p class="mt-5 text-lg text-justify">
              Enjoy live music and entertainment at our vibrant bars and
              lounges. From acoustic guitar to DJ sets, we offer a variety of
              musical experiences to enhance your evening.
            </p>
          </div>
        </div>
      </div>

      <div class="swiper-slide">
        <div class="flex gap-10 md:gap-32 flex-col lg:flex-row h-full">
          <div class="flex-1 lg:px-20">
            <img
              src="/media/dining6.jpg"
              alt=""
              class="flex-1 w-full aspect-square object-cover rounded-full"
            />
          </div>
          <div class="flex-1 flex flex-col justify-center">
            <h2 class="font-bold text-4xl">Special Events</h2>
            <p class="mt-5 text-lg text-justify">
              Join us for special events and themed evenings throughout the
              year. From wine tastings to holiday celebrations, we offer a
              variety of exciting experiences to enhance your stay.
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="swiper-pagination"></div>
    <button class="swiper-button-next">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-chevron-right"
      >
        <path d="m9 18 6-6-6-6"></path>
      </svg>
    </button>
    <button class="swiper-button-prev">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-chevron-left"
      >
        <path d="m15 18-6-6 6-6"> </path>
      </svg>
    </button>
  </div>

  <style>
    :root {
      --swiper-navigation-color: #ffbf00;
      --swiper-pagination-color: #ffbf00;
      --swiper-pagination-bullet-inactive-color: #ffbf00;
      --swiper-pagination-bullet-width: 12px;
      --swiper-pagination-bullet-height: 12px;
      --swiper-navigation-size: 30px !important;
    }
    .swiper-slide {
      height: 100% !important;
      min-height: 600px !important;
      width: 100% !important;
      background-color: white;
    }
    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .swiper-pagination-bullet-active {
      --swiper-pagination-bullet-width: 20px;
    }
    .swiper-button-next:after,
    .swiper-button-prev:after {
      content: none;
    }
    .swiper-button-next,
    .swiper-button-prev {
      height: 40px;
      width: 40px;
      backdrop-filter: blur(16px) saturate(200%);
      -webkit-backdrop-filter: blur(16px) saturate(200%);
      background-color: rgba(0, 0, 0, 0.75);
      border-radius: 50%;
    }
    @media (min-width: 1024px) {
      .swiper-button-prev {
        left: 0;
      }
      .swiper-button-next {
        left: 48%;
      }
    }
    @media (max-width: 1024px) {
      .swiper-button-prev {
        left: 0 !important;
        top: 35%;
      }
      .swiper-button-next {
        right: 0 !important;
        top: 35%;
      }
    }
    @media (max-width: 768px) {
      .swiper-button-prev {
        left: 0 !important;
        top: 30%;
      }
      .swiper-button-next {
        right: 0 !important;
        top: 30%;
      }
    }
    @media (max-width: 468px) {
      .swiper-button-prev {
        left: 0 !important;
        top: 26%;
      }
      .swiper-button-next {
        right: 0 !important;
        top: 26%;
      }
    }
  </style>
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
  />
  <script
    is:inline
    src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <!-- Initialize Swiper -->
  <script is:inline>
    var swiper = new Swiper(".mySwiper2", {
      slidesPerView: 1,
      grabCursor: true,
      spaceBetween: 20,
      effect: "fade",
      loop: true,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
    });
  </script>
</div>
